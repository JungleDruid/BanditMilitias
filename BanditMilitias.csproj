  <ItemGroup>
    <Reference Include="Newtonsoft.Json">
      <HintPath>..\..\BannerlordRefs\e1.8.0\Newtonsoft.Json.dll</HintPath>
    </Reference>
    <Reference Include="SandBox">
      <HintPath>..\..\BannerlordRefs\e1.8.0\SandBox.dll</HintPath>
